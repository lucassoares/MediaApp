<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mediaapp.lucassoares.com.mediaapp.MainActivity">

    <EditText
        android:id="@+id/bimId4"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="4º Bim"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="153dp"
        android:layout_marginBottom="95dp"
        android:layout_above="@+id/btnMediaId"
        android:layout_alignLeft="@+id/bimId2"
        android:layout_alignStart="@+id/bimId2" />

    <EditText
        android:id="@+id/bimId3"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="3º Bim"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="153dp"
        android:layout_alignBaseline="@+id/bimId4"
        android:layout_alignBottom="@+id/bimId4"
        android:layout_alignRight="@+id/bimId1"
        android:layout_alignEnd="@+id/bimId1"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp" />

    <EditText
        android:id="@+id/bimId2"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="2º Bim"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="47dp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_above="@+id/bimId4"
        android:layout_alignRight="@+id/btnMediaId"
        android:layout_alignEnd="@+id/btnMediaId"
        android:layout_marginBottom="57dp" />

    <EditText
        android:id="@+id/bimId1"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="1º Bim"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="47dp"
        android:layout_alignBaseline="@+id/bimId2"
        android:layout_alignBottom="@+id/bimId2"
        android:layout_alignLeft="@+id/btnMediaId"
        android:layout_alignStart="@+id/btnMediaId" />

    <Button
        android:id="@+id/btnMediaId"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Media"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_marginBottom="73dp"
        android:layout_above="@+id/mediaId"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <EditText
        android:id="@+id/mediaId"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="Media"
        android:inputType="none|numberDecimal"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="336dp"
        android:layout_alignBaseline="@+id/somaId"
        android:layout_alignBottom="@+id/somaId"
        android:layout_alignRight="@+id/btnMediaId"
        android:layout_alignEnd="@+id/btnMediaId" />

     <EditText
        android:id="@+id/somaId"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="Soma"
        android:inputType="none|numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="336dp"
         android:layout_marginBottom="38dp"
         android:layout_alignParentBottom="true"
         android:layout_alignLeft="@+id/btnMediaId"
         android:layout_alignStart="@+id/btnMediaId" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira as notas para serem calculadas"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/somaId"
        android:layout_alignLeft="@+id/somaId"
        android:layout_alignStart="@+id/somaId"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="Soma" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mediaId"
        android:layout_alignStart="@+id/mediaId"
        android:layout_alignTop="@+id/textView5"
        android:text="Média" />
</android.widget.RelativeLayout>
